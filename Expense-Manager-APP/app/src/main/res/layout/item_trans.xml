<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="10dp"
    app:strokeColor="#CABCBC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/white"
            android:text="Income"
            android:textSize="14sp"
            app:chipCornerRadius="8dp"
            app:chipStrokeWidth="1dp" />

        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 VND"
            android:textColor="#FFFFFF"
            android:layout_below="@id/chipType"
            android:layout_alignParentStart="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAmount"
            android:layout_alignParentStart="true"
            android:layout_marginTop="41dp"
            android:textColor="#FFFFFF"
            android:text="10:11:11"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDate"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="This is a note related to the transaction."
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Delete Button -->

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="#FFFFFF"
            android:shadowColor="#DE0505"
            android:text="Delete"
            android:textColor="#000000"
            android:textColorHighlight="#E90E0E"
            android:textColorHint="#EF2020"
            android:textColorLink="#FF0000" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="-89dp"
            android:layout_toStartOf="@id/button"
            android:backgroundTint="#FFFFFF"
            android:text="Edit"
            android:textColor="#000000" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
